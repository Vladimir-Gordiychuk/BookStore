@{
    ViewData["Title"] = "Order List";

    var status = Context.Request.Query["status"];

    var inprocessClass = "text-primary";
    var pendingClass = "text-primary";
    var completedClass = "text-primary";
    var allClass = "text-primary";
    var approvedClass = "text-primary";

    switch (status)
    {
        case "inprocess":
            inprocessClass = "active text-white";
            break;
        case "pending":
            pendingClass = "active text-white";
            break;
        case "completed":
            completedClass = "active text-white";
            break;
        case "approved":
            approvedClass = "active text-white";
            break;
        case "all":
            allClass = "active text-white";
            break;
    }
}

<div class="p-3">

    <div class="d-flex justify-content-between pt-4">
        <div class="p-2">
            <h2 class="text-primary">
                Order List
            </h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-contoller="Order" asp-action="Index" asp-route-status="inprocess">
                    <li class="list-group-item @inprocessClass">
                        In Process
                    </li>
                </a>
                <a style="text-decoration:none;" asp-contoller="Order" asp-action="Index" asp-route-status="pending">
                    <li class="list-group-item @pendingClass">
                        Payment Pending
                    </li>
                </a>
                <a style="text-decoration:none;" asp-contoller="Order" asp-action="Index" asp-route-status="completed">
                    <li class="list-group-item @completedClass">
                        Completed
                    </li>
                </a>
                <a style="text-decoration:none;" asp-contoller="Order" asp-action="Index" asp-route-status="approved">
                    <li class="list-group-item @approvedClass">
                        Approved
                    </li>
                </a>
                <a style="text-decoration:none;" asp-contoller="Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item @allClass">
                        All
                    </li>
                </a>
            </ul>
        </div>
    </div>
    <br />

    <table id="orderTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Order #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Phone #
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
                <th>
                    Date
                </th>
                <th>
                    Total
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="~/js/order.js"></script>

}
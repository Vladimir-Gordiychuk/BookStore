@model IEnumerable<Company>

@{
    ViewData["Title"] = "Company List";
}

<div class="container p-3">

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Edit" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br />

    <table id="companyTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Street Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Postal Code
                </th>
                <th>
                    Phone Number
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="~/js/company.js"></script>

}